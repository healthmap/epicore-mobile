<?xml version='1.0' encoding='utf-8'?>
<widget id="org.epicore.app" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Epicore</name>
    <description>
	Epicore web app for mobile devices.
    </description>
    <author email="jeff.andre@childrens.harvard.edu" href="www.epicore.org">
        Epicore Team
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <exclude-files pattern="**/scripts" />
    <exclude-files pattern="**/.git" />
    <exclude-files pattern=".gitignore" />
    <exclude-files pattern="**/crontab" />
    <plugin name="cordova-plugin-device" spec="^2.0.1" />
    <plugin name="phonegap-plugin-push" spec="^2.1.3">
        <variable name="SENDER_ID" value="67299923213" />
    </plugin>
    <plugin name="cordova-plugin-whitelist" spec="^1.3.3" />
    <plugin name="cordova-plugin-exclude-files" spec="^0.2.2" />
    <platform name="android">
        <resource-file src="google-services.json" target="google-services.json" />
    </platform>
    <engine name="ios" spec="^4.5.4" />
    <engine name="android" spec="^6.4.0" />
</widget>
